@using Digger.Server.Models.Authentification

@model LoginViewModel
@{
    ViewData["Title"] = "Se connecter à Digger";
}
<div class="container">
    <div class="page-header">
        <h1>@ViewData["Title"]</h1>
    </div>
    <form asp-controller="Authentification" asp-action="Login" method="post">
        @if (!ViewContext.ViewData.ModelState.IsValid)
        {
            <div asp-validation-summary="All" class="alert alert-danger"></div>
        }
        <div class="form-group">
            <label asp-for="Pseudo">Pseudo : </label>
            <input asp-for="Pseudo" class="form-control" />
            <span asp-validation-for="Pseudo"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Mot de passe : </label>
            <input asp-for="Password" class="form-control" type="password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Se connecter</button>
        </div>
    </form>
</div>
